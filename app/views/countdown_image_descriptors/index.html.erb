      <td><%= countdown_image_descriptor.minutes_position_x %></td>
      <td><%= countdown_image_descriptor.minutes_position_y %></td>
      <td><%= countdown_image_descriptor.seconds_position_x %></td>
      <td><%= countdown_image_descriptor.seconds_position_y %></td>
      <td><%= link_to 'Show', countdown_image_descriptor %></td>
      <td><%= link_to 'Edit', edit_countdown_image_descriptor_path(countdown_image_descriptor) %></td>
      <td><%= link_to 'Destroy', countdown_image_descriptor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
